---
interface Props {
  visible?: boolean;
}

const { visible = false } = Astro.props;
---

<div
  id="focus-overlay"
  class:list={[
    'fixed inset-0 pointer-events-none transition-opacity duration-500 z-10',
    visible ? 'opacity-100' : 'opacity-0',
  ]}
  role="presentation"
  aria-hidden="true"
>
  <!-- Radial gradient overlay to emphasize focused tile -->
  <div class="absolute inset-0 bg-gradient-radial from-transparent via-spiral-dark/40 to-spiral-dark/80"></div>
  
  <!-- Focus ring indicator -->
  <div
    id="focus-ring"
    class="absolute w-64 h-64 border-2 border-spiral-accent rounded-full pointer-events-none animate-pulse-subtle"
    style="left: 50%; top: 50%; transform: translate(-50%, -50%);"
  ></div>
</div>

<style>
  .bg-gradient-radial {
    background: radial-gradient(circle at center, transparent 20%, rgba(10, 10, 10, 0.4) 50%, rgba(10, 10, 10, 0.8) 100%);
  }
</style>

