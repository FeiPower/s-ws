---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ContentCard from '../../components/ContentCard.astro';
import { getCollection } from 'astro:content';

const allResources = await getCollection('resources');
const sortedResources = allResources.sort((a, b) => {
  if (a.data.featured !== b.data.featured) return b.data.featured ? 1 : -1;
  return a.data.title.localeCompare(b.data.title);
});

const resourcesByType = {
  'Framework': sortedResources.filter(r => r.data.resourceType === 'Framework'),
  'Template': sortedResources.filter(r => r.data.resourceType === 'Template'),
  'Guide': sortedResources.filter(r => r.data.resourceType === 'Guide'),
  'Tool': sortedResources.filter(r => r.data.resourceType === 'Tool'),
  'Whitepaper': sortedResources.filter(r => r.data.resourceType === 'Whitepaper'),
};
