---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getPhase } from '../../config/graphics';

export const getStaticPaths = async () => {
  const cases = await getCollection('cases');
  return cases.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
};

const { entry } = Astro.props;
const { Content } = await entry.render();

const phase = entry.data.phaseId ? getPhase(
  entry.data.phaseId === 'overview' ? 25 : 
  entry.data.phaseId === 'discovery' ? 85 : 
  entry.data.phaseId === 'strategy' ? 170 : 
  entry.data.phaseId === 'execution' ? 290 : 460
) : null;

// Get related cases
const allCases = await getCollection('cases');
const relatedCases = allCases
  .filter(c => c.slug !== entry.slug && (
    c.data.projectType === entry.data.projectType ||
    c.data.industry === entry.data.industry ||
    c.data.phaseId === entry.data.phaseId
  ))
  .slice(0, 3);
